{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "types/module.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "vite.config.ts",
    "vite/**/*.ts",
    "mock/**/*.ts",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ],
  "types": ["element-plus/global", "echarts", "lodash"]
}
